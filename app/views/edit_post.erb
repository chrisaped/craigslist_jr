<h3>Edit Post</h3>
<form id="edit_post" method="post" action="/post/<%= @post.id %>/edit">
	<input type="text" name="title" placeholder="Title" value="<%=@post.title%>"><br>
	<textarea cols='22'name="description" placeholder="Description" value="<%= @post.description %>"></textarea><br>
	<input type="submit" value="Submit">
</form>


